{% extends 'base.html.twig' %} 

{% block title property.title %} 

{% block body %} 
    <div class="jumbotron">
        <div class="container">
            <div class="row">
            <div class="col-md-8"></div>
            <div class="col-md-4">
                <h1>{{property.title}}</h1>
                <h2><i class="fas fa-map-marker-alt"></i> {{property.city}}, {{property.state}}</h2>
                <h4><i class="fas fa-city"></i> {{property.address}} <br> {{property.city}}, {{property.state}} {{property.postalCode}}</h4>
                <h4>{{property.rooms}} rooms - {{property.surface}} meters</h4>
                <div class="text-primary" style= "font-size: 4rem; font-weight: bold;">{{property.formattedPrice}} $</div>
                <a href="#" class="btn btn-primary">Contact us !</a>
            </div>
        </div>
    </div>

    </div>
    <div class="container mt-4">
        <p>
            {{property.description | nl2br}}
        </p>

        <div class="row">
            <div class="col-md-8">
                <h2>Caracteristics</h2>
                <table class="table table-striped">
                    <tr>
                        <td>Surface</td>
                        <td>{{ property.surface }}</td>
                    </tr>
                    <tr>
                        <td>Rooms</td>
                        <td>{{ property.rooms }}</td>
                    </tr>
                    <tr>
                        <td>Bedrooms</td>
                        <td>{{ property.bedrooms }}</td>
                    </tr>
                    <tr>
                        <td>Floors</td>
                        <td>{{ property.floor }}</td>
                    </tr>
                    <tr>
                        <td>Heat</td>
                        <td>{{ property.heatType }}</td>
                    </tr>
                </table>
            </div>
            <div class="col-md-4">
                <h2>Specificities</h2>
            </div>   
        </div>
    </div>
    


{% endblock %} 

